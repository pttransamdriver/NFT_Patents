# =============================================================================
# PATENT NFT MARKETPLACE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# This is the ONLY .env file you need for all environments
# =============================================================================

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Switch based on your target:
# Local: VITE_CHAIN_ID=31337, VITE_RPC_URL=http://127.0.0.1:8545
# Sepolia: VITE_CHAIN_ID=11155111, VITE_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
# Mainnet: VITE_CHAIN_ID=1, VITE_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

VITE_NETWORK_NAME=sepolia
VITE_CHAIN_ID=11155111
VITE_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================
# Update these after deploying contracts to your target network

VITE_PSP_TOKEN_ADDRESS=
VITE_SEARCH_PAYMENT_ADDRESS=
VITE_PATENT_NFT_ADDRESS=
VITE_MARKETPLACE_ADDRESS=

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# Local: http://localhost:3001
# Production: https://your-backend.vercel.app

VITE_API_BASE_URL=http://localhost:3001
VITE_BACKEND_URL=http://localhost:3001
PORT=3001

# =============================================================================
# API KEYS
# =============================================================================

# Infura (get free key at https://infura.io)
INFURA_API_KEY=your_infura_api_key_here

# Etherscan (get key at https://etherscan.io/apis)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# USPTO API (optional - https://developer.uspto.gov/)
USPTO_API_KEY=your_uspto_api_key_here
VITE_USPTO_API_KEY=your_uspto_api_key_here

# SerpAPI for Google Patents (get key at https://serpapi.com)
SERPAPI_KEY=your_serpapi_key_here

# OpenAI (optional - https://platform.openai.com/api-keys)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Gemini AI (optional - https://makersuite.google.com/app/apikey)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Pinata IPFS (get keys at https://pinata.cloud)
VITE_PINATA_API_KEY=your_pinata_api_key_here
VITE_PINATA_SECRET_KEY=your_pinata_secret_key_here

# =============================================================================
# PRIVATE KEYS (⚠️ NEVER SHARE OR COMMIT!)
# =============================================================================

# Local Hardhat Test Account (safe default - DO NOT use on mainnet!)
LOCALHOST_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Sepolia Testnet (get test ETH from https://sepoliafaucet.com/)
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key_here
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Mainnet (⚠️ Use hardware wallet for production!)
# MAINNET_PRIVATE_KEY=your_mainnet_private_key_here
# MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# =============================================================================
# APP CONFIGURATION
# =============================================================================

VITE_APP_NAME=PatentNFT
VITE_ENVIRONMENT=development
VITE_DEBUG=true

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Security Configuration
VITE_ENABLE_SECURITY_HEADERS=true
VITE_MAX_API_REQUESTS_PER_MINUTE=10
VITE_MAX_SEARCH_REQUESTS_PER_MINUTE=5

# Monitoring (optional)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_ANALYTICS_ID=your_analytics_id_here

# Development
VITE_ENABLE_MOCK_DATA=false
VITE_DEBUG_MODE=false

# Backend Security
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# QUICK START GUIDE
# =============================================================================
#
# 1. Copy this file: cp .env.example .env
# 2. Get API keys from the URLs listed above
# 3. Choose your network (local/sepolia/mainnet)
# 4. Update the network config section
# 5. Run: npm run dev
#
# For Vercel deployment, set all VITE_* variables in dashboard
# =============================================================================
