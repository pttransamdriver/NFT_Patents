# =============================================================================
# PATENT NFT MARKETPLACE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# For Vercel deployment, set these variables in the Vercel dashboard
# =============================================================================

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Sepolia Testnet (recommended for development)
VITE_NETWORK_NAME=sepolia
VITE_CHAIN_ID=11155111
VITE_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# =============================================================================
# CONTRACT ADDRESSES (Sepolia)
# =============================================================================
# Update these after deploying contracts to Sepolia
VITE_PSP_TOKEN_ADDRESS=
VITE_SEARCH_PAYMENT_ADDRESS=
VITE_PATENT_NFT_ADDRESS=
VITE_MARKETPLACE_ADDRESS=

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# For local development: http://localhost:3001
# For Vercel: https://your-backend.vercel.app
VITE_API_BASE_URL=https://nft-patents-backend.vercel.app
PORT=3001

# =============================================================================
# API KEYS (Required for Vercel deployment)
# =============================================================================

# SerpAPI for Google Patents (REQUIRED - get key at https://serpapi.com)
SERPAPI_KEY=your_serpapi_key_here

# Etherscan (optional - get key at https://etherscan.io/apis)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

# IPFS Gateway for metadata retrieval
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# =============================================================================
# APP CONFIGURATION
# =============================================================================

VITE_APP_NAME=PatentNFT
VITE_ENVIRONMENT=production
VITE_DEBUG=false

# =============================================================================
# BACKEND SECURITY
# =============================================================================

# CORS origin for frontend
CORS_ORIGIN=https://nft-patents.vercel.app

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
#
# For Vercel Deployment:
# 1. Set these environment variables in Vercel dashboard:
#    - VITE_CHAIN_ID
#    - VITE_RPC_URL
#    - VITE_PATENT_NFT_ADDRESS
#    - VITE_MARKETPLACE_ADDRESS
#    - VITE_PSP_TOKEN_ADDRESS
#    - VITE_SEARCH_PAYMENT_ADDRESS
#    - VITE_API_BASE_URL
#    - SERPAPI_KEY (backend)
#    - PINATA_JWT (backend only)
#    - CORS_ORIGIN
#
# 2. Pinata JWT is stored ONLY in backend/.env on Vercel
#    Frontend never has access to it - all IPFS uploads go through backend
#
# 3. Frontend is deployed from root directory
#    Backend is deployed from /backend directory
#
# =============================================================================
